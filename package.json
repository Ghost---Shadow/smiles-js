{
  "name": "smiles-js",
  "version": "2.0.2",
  "description": "A JavaScript library for building molecules using composable fragments",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./common": "./src/common.js"
  },
  "scripts": {
    "test": "bun test",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov --coverage-dir=coverage",
    "coverage:summary": "bun run scripts/coverage-summary.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "bun build src/index.js src/common.js --outdir=dist --minify --format=esm --splitting"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ghost---Shadow/smiles-js"
  },
  "keywords": [
    "smiles",
    "chemistry",
    "molecules",
    "dsl"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rdkit/rdkit": "^2025.3.4-1.0.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0"
  }
}
